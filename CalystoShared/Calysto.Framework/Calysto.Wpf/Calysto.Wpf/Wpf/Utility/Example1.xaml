<UserControl x:Class="Calysto.Wpf.Utility.Example1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calysto.Wpf.Utility"
			 xmlns:foo="clr-namespace:Calysto.Wpf.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

		<StackPanel Orientation="Horizontal" foo:SpacingSetter.Horizontal="5">
			<Button>Button 1</Button>
			<Button>Button 2</Button>
		</StackPanel>

		<StackPanel Orientation="Vertical" foo:SpacingSetter.Vertical="5">
			<Button>Button 1</Button>
			<Button>Button 2</Button>
		</StackPanel>

		<StackPanel Orientation="Vertical" foo:MarginSetter.Margin="5" foo:MarginSetter.LastItemMargin="5 0">
			<Button>Button 1</Button>
			<Button>Button 2</Button>
		</StackPanel>
		
	</Grid>
</UserControl>
