@page "/blazor"
@using Calysto.Genesis.WebSite.Pages
@model _HomeModel
@functions{
	/// <summary>
	/// Path base must end with slash.
	/// </summary>
	/// <returns></returns>
	private string GetBasePath()
	{
		return Request.PathBase.Value + (Request.PathBase.Value.EndsWith("/") ? null : "/");
	}
}
<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta http-equiv='cache-control' content='no-cache'>
	<meta http-equiv='expires' content='0'>
	<meta http-equiv='pragma' content='no-cache'>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<title>Blazor Test</title>
	<base href="@GetBasePath()" />
	<meta id="server-version" value="@Model.ServerVersion" />
	@*<script src="ts/Calysto.Blazor.Interop.js" asp-append-version="true"></script>*@
	<link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/css/app.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/CalystoBlazorWasm.Client.styles.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/manifest.json" rel="manifest" asp-append-version="true" />
	<link rel="icon" href="~/icon-512.png" asp-append-version="true" />
	<link rel="apple-touch-icon" href="~/icon-512.png" asp-append-version="true" />
	@*<script src="~/_content/Calysto.Blazor/ts/Calysto.Blazor.Interop.js" asp-append-version="true"></script>*@
	<style type="text/css">
		.box1{
			margin:5px;
			padding:10px;
			width:800px;
			min-height:200px;
			border:solid 1px silver;
			float:left;
		}
	</style>
</head>

<body>
	@*<div id="app">Loading...</div>*@
	<div class="box1">
		<component type="typeof(CalystoBlazorWasm.Client.App)" render-mode="WebAssembly" />
	</div>
	<div id="blazor-error-ui">
		An unhandled error has occurred.
		<a href="" class="reload">Reload</a>
		<a class="dismiss">🗙</a>
	</div>
	<script src="~/_framework/blazor.webassembly.js" asp-append-version="true"></script>
	<script>navigator.serviceWorker.register('service-worker.js',);</script>
</body>

</html>
